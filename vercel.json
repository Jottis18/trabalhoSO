{
  "version": 2,
  "builds": [
    {
      "src": "scheduler-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/scheduler-frontend/$1"
    }
  ],
  "buildCommand": "cd scheduler-frontend && npm run build",
  "outputDirectory": "scheduler-frontend/build",
  "installCommand": "cd scheduler-frontend && npm install"
}
